{
  "maxerr": 25,
  "latedef": "nofunc",
  "browser": true,
  "node": true, // for browserify require etc
  "globals": ["$", "Prism", "describe", "it", "before", "after", "beforeEach", "afterEach", "context"],
  "indent": 2,
  "camelcase": true,
  "newcap": true,
  "undef": true,
  "multistr": true,
  "esnext": true,
  "noyield": true,
  "devel": true,
  "loopfunc": true,
  "-W004": true,
  "-W030": true, // for yield* ...
  "-W078": true, // allow setter w/o getter
  "esversion": 6
}